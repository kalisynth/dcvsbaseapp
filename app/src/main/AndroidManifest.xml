<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dcvs.nac.dcvsbaseapp">
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dcvsbaseicon"
        android:label="@string/app_name"
        android:screenOrientation="sensorLandscape"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="clientscreen"
            android:label="@string/title_activity_clientscreen" />
        <activity
            android:name="demoscreen"
            android:label="@string/title_activity_demoscreen" />
        <activity
            android:name="aboutscreen"
            android:label="@string/title_activity_aboutscreen" />
        <activity
            android:name="volunteerscreen"
            android:label="@string/title_activity_volunteerscreen" />
    </application>

</manifest>
