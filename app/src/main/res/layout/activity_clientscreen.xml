<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.dcvs.nac.dcvsbaseapp.clientscreen"
    android:background="@drawable/dcvsclientappbg">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="1350dp"
    android:layout_alignParentStart="true"
    android:layout_marginTop="122dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/linearLayout"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/greetingTxt"
        android:text="@string/greetingTxt1"
        android:layout_gravity="center"
        android:textColor="#000000" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords"
        android:hint="@string/clientNameinput"
        android:ems="22"
        android:id="@+id/clientNameinput"
        android:layout_gravity="center"
        android:imeOptions="actionDone" />
</LinearLayout>

<ImageView
    android:layout_width="2060dp"
    android:layout_height="1350dp"
    android:id="@+id/tabletimg"
    android:layout_alignTop="@+id/linearLayout"
    android:layout_toEndOf="@+id/linearLayout" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackBTN"
        android:src="@drawable/backbtn"
        android:layout_alignBottom="@+id/tabletimg"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="73dp"
        android:background="#00ffffff"
        android:onClick="backbtnOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tablettalktxt"
        android:layout_alignTop="@+id/tabletimg"
        android:layout_alignEnd="@+id/tabletimg"
        android:layout_marginEnd="240dp"
        android:layout_marginTop="251dp"
        android:textColor="#000000" />
</RelativeLayout>
